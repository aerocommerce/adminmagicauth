{% extends "layouts.main" %}

{% block content %}
<div class="flex flex-wrap flex-col w-full max-w-3xl mx-auto p-4 pb-8">
    <div class="w-full">
        <h1 class="text-primary text-3xl mt-3 mb-6 text-center">Please provide your email address.</h1>
        <p class="text-center p-4">You must provide an email that has been authorised to be used with this website.
        Unauthorised emails will be rejected.</p>
    </div>
    <div class="flex flex-wrap w-full">
        <div class="w-full lg:w-full bg-white rounded-lg shadow-lg lg:shadow-none p-5 border border-grey-light">
            <form action="{{ url }}" method="post">
                {{ csrf_field() }}
                {% if session('message') %}
                    <div class="mb-4">
                            <span class="block w-full bg-white border-2 border-green text-green font-bold my-2 p-3 rounded-lg text-center lg:shadow-md" role="alert">
                                <strong>{{ session('message') }}</strong>
                            </span>
                    </div>
                {% endif %}
                <div class="mt-4">
                    <label for="email" class="text-primary-dark text-sm font-semibold block pb-2">Email</label>
                    {% if errors.has('email') %}
                        <span class="block w-full bg-white border-2 border-red text-red font-bold mb-2 p-3 rounded-lg text-center lg:shadow-md" role="alert">
                                <strong>{{ errors.first('email') }}</strong>
                            </span>
                    {% endif %}
                    <input id="email" type="email" name="email" value="{{ old('email', auth_user().email) }}"
                           class="border hover:border-grey-dark focus:border-primary focus:border-2 rounded outline-none focus:outline-none p-3 m-px focus:m-0 w-full"
                           required>
                </div>
                <div class="mt-6 flex items-center justify-between">
                    <button type="submit" class="inline-block border-2 border-primary bg-primary text-white font-bold py-4 px-8 rounded-full outline-none focus:outline-none hover:border-primary-dark hover:bg-primary-dark cursor-pointer transition-fast">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}
